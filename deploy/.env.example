# PostgreSQL Database
POSTGRES_DB=writer
POSTGRES_USER=writer
POSTGRES_PASSWORD=your-strong-password-here

# Redis
REDIS_PASSWORD=your-strong-password-here

# Qdrant Vector Database
QDRANT_API_KEY=your-strong-api-key-here

# MinIO S3 Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-strong-password-here
MINIO_BUCKET=writer-uploads

# PgAdmin (Development only)
PGADMIN_EMAIL=admin@writer.local
PGADMIN_PASSWORD=admin

# Application
NODE_ENV=development
PORT=3000

# LLM Configuration
# Platform determines which AI SDK provider is used:
# - openai: OpenAI
# - anthropic: Anthropic
# - ollama: OpenAI-compatible (Ollama)
# - lmstudio: OpenAI-compatible (LM Studio)
# - openai-compatible: Any OpenAI-compatible provider
LLM_PLATFORM=ollama
LLM_API_URL=http://localhost:11434/v1
LLM_MODEL=llama3.1
LLM_API_KEY=sk-your-api-key-here

# Authentication (Better Auth)
BETTER_AUTH_SECRET=your-super-secret-key-here

# Data Residency
DATA_REGION=EU
